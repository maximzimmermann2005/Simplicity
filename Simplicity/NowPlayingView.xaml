<UserControl
    x:Class="Simplicity.NowPlayingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto"
    Height="Auto">
    <StackPanel Margin="10">
        <TextBlock
            Margin="0,10,0,5"
            FontSize="14"
            FontWeight="Bold"
            Text="Now Playing" />
        <TextBlock
            x:Name="TitleText"
            FontSize="16"
            FontWeight="Bold"
            Text="—" />
        <TextBlock
            x:Name="ArtistText"
            Margin="0,2,0,0"
            FontSize="14"
            Text="—" />
        <Image
            x:Name="AlbumArtImage"
            Width="100"
            Height="100"
            Margin="0,10,0,0" />
    </StackPanel>
</UserControl>