<Window
    x:Class="Simplicity.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Simplicity"
    Title="Simplicity"
    Width="1000"
    Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <!--  For media controls  -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!--  Main area  -->
            <ColumnDefinition Width="*" />
            <!--  Side panel  -->
        </Grid.ColumnDefinitions>

        <!--  Main content area  -->
        <ContentControl
            x:Name="MainRegionContent"
            Grid.Row="0"
            Grid.Column="0" />

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  This will host the QueueView (with Queue + Up Next lists)  -->
            <ContentControl x:Name="SideRegionContent" Grid.Row="0" />

            <!--  NowPlaying stays fixed at the bottom  -->
            <local:NowPlayingView
                x:Name="NowPlayingPanel"
                Grid.Row="1"
                Margin="0,10,0,0" />
        </Grid>

        <!--  Media controls at bottom  -->
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="50"
                Margin="5"
                Content="⏮" />
            <Button
                Width="50"
                Margin="5"
                Content="▶️" />
            <Button
                Width="50"
                Margin="5"
                Content="⏸" />
            <Button
                Width="50"
                Margin="5"
                Content="⏭" />
        </StackPanel>
    </Grid>
</Window>